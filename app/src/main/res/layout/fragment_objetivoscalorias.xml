<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/ObjetivoCal"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="28dp"
        android:autoText="false"
        android:text="@string/descripcionObetivos"
        android:textAlignment="center"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/metaDiaria"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCaloriasDiaria"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/objetivoSemanal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCaloriasSemanal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/objetivoMensual"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCaloriasMensual"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=""
            android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btnAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/anterior" />

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@color/colorAccent"
            android:text="@string/btnSiguiente" />
    </LinearLayout>

    </LinearLayout>